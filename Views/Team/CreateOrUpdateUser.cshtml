@using WitsXMxic.Const
@using WitsXMxic.Models.ViewModels
@{
    ViewBag.Title = "團員管理";
}
@model UserModel

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">團員管理</h1>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!---搜尋框-->
                <div class="card">
                    <div class="card-header">
                        @ViewBag.Action
                    </div>
                    <form method="post" asp-action="CreateOrUpdateUser">
                        <input asp-for="@Model.Id" class="form-control" hidden>
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.Name" class="control-label"></label>
                                    <input asp-for="@Model.Name" class="form-control" required />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.Age" class="control-label"></label>
                                    <input asp-for="@Model.Age" class="form-control" required />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label asp-for="@Model.BirthDay" class="control-label"></label>
                                    <input asp-for="@Model.BirthDay" type="date" class="form-control" required />
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="form-group row">
                                <div class="col-md-12 text-right">
                                    <a class="btn btn-secondary" asp-action="Cancel">返回列表</a>
                                    <button type="submit" class="btn btn-round btn-success">@ViewBag.SubmitButtonText</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(() => {
        });
    </script>
}

